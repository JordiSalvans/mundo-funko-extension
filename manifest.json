{
	"manifest_version": 2,
	"name": "Mundo Funko",
	"version": "1.0.8",
	"description": "Extensi√≥n para ver las novedades de Mundo Funko",
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_title": "Mundo Funko",
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"page": "background.html"
	},
	"sidebar_action": {
		"default_title": "Mundo Funko",
		"default_panel": "sidebar.html",
		"default_icon": "img/icon.png"
	},
	"permissions": [
		"storage",
		"notifications",
		"*://dashboard.kiory.pro/**",
		"*://kiory.com/**",
		"*://mundofunko.com/**"
	],
    "homepage_url": "http://mundofunko.com/"
}